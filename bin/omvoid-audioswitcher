#!/usr/bin/env bash
# Set audio sinks before using!
# `pactl list sinks` if on pulseaudio.

headphones () { \
  # wpctl set-default 184 &
  pactl set-default-sink 'alsa_output.usb-Generic_AB13X_USB_Audio_20210726905926-00.analog-stereo' &
  notify-send  -h string:bgcolor:#a3be8c "Audio switched to headphones!"
}

speakers () { \
  # wpctl set-default 36 &
  pactl set-default-sink 'effect_input.eq10' &
  notify-send  -h string:bgcolor:#bf616a "Audio switched to speakers!"
}

bluetooth () { \
  # pacmd set-default-sink "SET SINK NAME" &
  pactl set-default-sink 'alsa_output.usb-Generic_AB13X_USB_Audio_20210726905926-00.analog-stereo' &
  notify-send  -h string:bgcolor:#88c0d0 "Audio switched to bluetooth!"
}

choosespeakers() { \
  choice=$(printf "Aux\\nSpeakers\\nBluetooth" | rofi -dmenu -theme "~/.config/rofi/menu-style-minimal.rasi"  -p "Choose output: ")
  case "$choice" in
    Aux) headphones;;
    Speakers) speakers;;
    Bluetooth) bluetooth;;
  esac
}

choosespeakers
